{
  "manifest_version": 3,
  "name": "Third-Party Cookie Tracker",
  "version": "1.0",
  "description": "Track and log third-party cookies for research purposes.",
  "permissions": [
    "cookies", "tabs", "storage", "webRequest", "webRequestBlocking"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
